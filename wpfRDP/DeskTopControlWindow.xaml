<Window x:Class="wpfRDP.DeskTopControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DeskTopControlWindow" Height="180" Width="400">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
            <Button x:Name="ConnectButton" Width="100" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,10,10" Content="Connect"></Button>
            <Button x:Name="DisConnectButton" Width="100" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,10,10" Content="Disconect"></Button>
            <Button x:Name="ControlButton" Width="100" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,10,10" Content="Control"></Button>
        </StackPanel>
    </Grid>
</Window>
